<%- include('partials/header') %>
<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold text-center mb-6">Dashboard</h1>
  <a href="/" class="py-2 px-4 shadow-sm rounded-md bg-green-500 text-white">Add Expense</a>
  <div class="bg-blue-100 text-blue-700 p-4 rounded-md text-center my-6">
    <h2>Total Spent: $<span class="font-bold"><%= totalSpent.toFixed(2) %></span></h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% expenses.forEach(expense => { %>
      <div class="p-4 bg-white shadow-md rounded-md">
        <h3 class="text-lg font-bold mb-2"><%= expense._id %></h3>
        <p>Total: $<%= expense.total.toFixed(2) %></p>
      </div>
    <% }) %>
  </div>
</div>
<%- include('partials/footer') %>
